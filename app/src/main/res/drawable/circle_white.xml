<!-- circle_white.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" />
    <size
        android:width="20dp"
        android:height="20dp" />
    <stroke
        android:width="1dp"
        android:color="@color/black" /><!-- Adjust size as needed for smaller circle -->
    <corners
        android:radius="10dp" /> <!-- Half of the width/height for a perfect circle -->
</shape>
